{
    "Logging": {
        "LogLevel": {
            "Default": "Information"
        }
    },

    "AllowedHosts": "*",

    "ConnectionStrings": {
        "DefaultConnection": "Host=db;Port=5432;Database=CoffeeSharpDb;Username=postgres;Password=yourpassword",
        "LogDbConnection": "Host=logdb;Port=5432;Database=CoffeeSharpLogs;Username=postgres;Password=yourpassword"
    },

    "Jwt": {
        "Secret": "ICanCookEverythingAndMore12345678!!!"
    },

    "Authorization": {
        "ManagerRoleId": "1"
    },

    "Transaction": {
        "PendingStatus": "3",
        "CompletedStatus": "1",
        "CancelledStatus": "2"
    },

    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.PostgreSQL" ],
        "MinimumLevel": {
            "Default": "Information"
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "PostgreSQL",
                "Args": {
                    "connectionString": "Host=logdb;Port=5432;Database=CoffeeSharpLogs;Username=postgres;Password=yourpassword",
                    "tableName": "Logs",
                    "needAutoCreateTable": true,
                    "columnOptionsSection": {
                        "message": {
                            "columnName": "Message",
                            "dataType": "TEXT"
                        },
                        "message_template": {
                            "columnName": "MessageTemplate",
                            "dataType": "TEXT"
                        },
                        "level": {
                            "columnName": "Level",
                            "dataType": "VARCHAR(50)"
                        },
                        "time_stamp": {
                            "columnName": "TimeStamp",
                            "dataType": "TIMESTAMP WITH TIME ZONE"
                        },
                        "exception": {
                            "columnName": "Exception",
                            "dataType": "TEXT"
                        },
                        "properties": {
                            "columnName": "Properties",
                            "dataType": "JSONB"
                        },
                        "log_event": {
                            "columnName": "LogEvent",
                            "dataType": "TEXT"
                        }
                    }
                }
            }
        ]
    }
}
