<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Client.ViewModels"
             xmlns:views="clr-namespace:Client.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Views.ProductView"
             x:DataType="viewModels:ProductViewModel">
    <StackPanel Spacing="10">
        
        <!-- Поисковая строка -->
        <DockPanel Margin="0 0 0 10">
            <TextBox Width="300" Watermark="Название" Text="{Binding SearchNameQuery}" />
            <Button Content="🔍" Margin="5 0 0 0" Click="SearchProducts"/>
            <Button Content="+" Margin="5 0 0 0" Click="CreateProduct"/>
        </DockPanel>
        
        <ItemsControl ItemsSource="{Binding Products}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="viewModels:ProductItemViewModel">
                    <views:ProductItem Margin="0, 6" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
    
    <Design.DataContext>
        <viewModels:ProductViewModel />
    </Design.DataContext>
</UserControl>