<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Client.ViewModels"
        xmlns:views="clr-namespace:Client.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client.Views.BranchInformationWindow"
        x:DataType="viewModels:BranchInformationWindowViewModel"
        Title="BranchInformationWindow">
    <Design.DataContext>
        <viewModels:BranchInformationWindowViewModel/>
    </Design.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="10"
                    Width="250">

            <TextBlock Text="Название:"/>
            <TextBox Text="{Binding BranchDto.Name}" />

            <TextBlock Text="Адрес:"/>
            <TextBox Text="{Binding BranchDto.Address}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0" IsVisible="{Binding !IsNew}">
                <Button Content="Сохранить" Click="Save" />
                <Button Content="Отменить" Click="Cancel" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0" IsVisible="{Binding IsNew}">
                <Button Content="Создать" Click="Save" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
