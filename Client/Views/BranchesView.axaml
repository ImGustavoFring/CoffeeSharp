<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Client.ViewModels"
             xmlns:views="clr-namespace:Client.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Views.BranchesView"
             x:DataType="viewModels:BranchesViewModel">
    <StackPanel Spacing="10">
        
        <!-- Поисковая строка -->
        <DockPanel Margin="0 0 0 10">
            <TextBox Width="300" Watermark="Поиск" Text="{Binding SearchQuery}" />
            <Button Content="🔍" Margin="5 0 0 0" />
            <Button Content="+" Margin="5 0 0 0" />
        </DockPanel>

        <!-- Список филиалов -->
        <ItemsControl ItemsSource="{Binding Branches}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="viewModels:BranchItemViewModel">
                    <views:BranchItem />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
    
    <UserControl.DataContext>
        <viewModels:BranchesViewModel />
    </UserControl.DataContext>
</UserControl>
